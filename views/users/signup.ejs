<% layout("/layouts/boilerplate") %>

<body>
    
    <div class="row">
        <div class="col-8 offset-2">
            <br>
             <h3 >SignUp</h3> <br>
               <form action="/signup" method="post" novalidate class="needs-validation">
                <div>
                    <label for="title" class="form-label">Username</label>
                    <input type="text" name="username" placeholder="username" class="form-control" required> <br>
                    <div class="invalid-feedback">Enter  username</div>
                 </div>
                <div>
                    <label for="title" class="form-label">Email</label>
                    <input type="text" name="email" placeholder="email" class="form-control" required> <br>
                    <div class="invalid-feedback">Enter email</div>
                 </div>
                <div>
                    <label for="title" class="form-label">Password</label>
                    <input type="password" name="password"  class="form-control" required> <br>
                    <div class="invalid-feedback">Enter password</div>
                 </div>
                 <button class="btn btn-success">  Signup</button>
               </form>
         <div>
    </div>
</body>